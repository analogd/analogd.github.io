{
  "schema_version": "1.0",
  "description": "Driver library schema definition",
  "parameters": {
    "measured": {
      "description": "Parameters that must be measured directly",
      "fields": {
        "fs": {"unit": "Hz", "description": "Resonance frequency"},
        "qts": {"unit": "dimensionless", "description": "Total Q factor"},
        "qes": {"unit": "dimensionless", "description": "Electrical Q factor", "optional": true},
        "qms": {"unit": "dimensionless", "description": "Mechanical Q factor", "optional": true},
        "vas": {"unit": "L", "description": "Equivalent air compliance volume"},
        "re": {"unit": "Ω", "description": "DC resistance"},
        "le": {"unit": "mH", "description": "Voice coil inductance"},
        "xmax": {"unit": "mm", "description": "Linear excursion (one-way)"},
        "sd": {"unit": "cm²", "description": "Effective piston area"},
        "pe": {"unit": "W", "description": "Power handling (RMS)"}
      }
    },
    "derived": {
      "description": "Parameters calculated from measured values",
      "fields": {
        "vd": {
          "unit": "cm³",
          "description": "Linear displacement volume",
          "formula": "sd × xmax"
        },
        "ebp": {
          "unit": "dimensionless",
          "description": "Efficiency bandwidth product",
          "formula": "fs / qes",
          "requires": ["qes"]
        },
        "sensitivity_est": {
          "unit": "dB",
          "description": "Estimated sensitivity @ 1W/1m",
          "formula": "112 + 10 × log10(fs³ × vas)"
        },
        "enclosure_hint": {
          "unit": "string",
          "description": "Suggested enclosure type based on EBP",
          "formula": "if ebp < 50: sealed, elif ebp < 100: versatile, else: ported"
        }
      }
    }
  }
}
